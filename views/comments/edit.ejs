<%- include("../partials/header.ejs")%>
<div class="container">
<header class="jambotron">
	<div class="container">
		<h1 style="text-align: center;">Edit Comment</h1>
		<div class="row">
			<div style="width: 30%; margin: 15px auto;">
				<form action="/shops/<%=shop_id%>/comment/<%=comment._id%>?_method=PUT" method="post">
					<div class="form-group">
						<input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
					</div>
					<div class="form-group">
						<input class="btn btn-primary btn-lg btn-block" type="submit">
					</div>					
				</form>
				<a href="/shops">Go Back</a>
			</div>
		</div>  
	</div>
	
</header>
<%- include("../partials/footer.ejs")%>